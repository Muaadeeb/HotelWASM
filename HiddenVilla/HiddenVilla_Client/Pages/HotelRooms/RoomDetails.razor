@page "/hotel/room-details/{Id:int}"

@inject IJSRuntime _jsRunTime
@inject ILocalStorageService _localStorageService
@inject IHotelRoomService _hotelRoomService

@using HiddenVilla_Client.ViewModels;


@if(HotelBookingVM?.OrderDetails?.HotelRoomDTO?.HotelRoomImages == null)
{
    <div class="spinner"></div>
}
else
{


<div class="mt-4 mx-4 px-0 px-md-5 mx-md-5">

    <div class="row p-2 my-3 " style="border-radius:20px; ">
        <div class="col-12 col-lg-7 p-4" style="border: 1px solid #fff">
            <div class="row px-2 text-success border-bottom">
                <div class="col-8 py-1"><p style="font-size:x-large;margin:0px;">Selected Room</p></div>
                <div class="col-4 p-0"><a href="hotel/rooms" class="btn btn-secondary btn-block">Back to Room's</a></div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div id="" class="carousel slide mb-4 m-md-3 m-0 pt-3 pt-md-0" data-ride="carousel">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="images/slide1.jpg" alt="First slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <span class="float-right pt-4">
                        <span class="float-right">Max Occupancy : @HotelBookingVM.OrderDetails.HotelRoomDTO.Occupancy adults </span><br />
                        <span class="float-right pt-1">Villa Size : @HotelBookingVM.OrderDetails.HotelRoomDTO.SqFt sqft</span><br />
                        <h4 class="text-warning font-weight-bold pt-5 pl-5">USD 
                            <span style="border-bottom:1px solid #ff6a00">
                                @HotelBookingVM.OrderDetails.HotelRoomDTO.TotalAmount.ToString("#,#.00; (#,#.00#)") 
                            </span></h4>
                        <span class="float-right">Cost for @HotelBookingVM.OrderDetails.HotelRoomDTO.TotalDays nights</span>
                    </span>
                </div>
            </div>
            <div class="row p-2">
                <div class="col-12">
                    <p class="card-title text-warning" style="font-size:xx-large">@HotelBookingVM.OrderDetails.HotelRoomDTO.Name</p>
                    <p class="card-text" style="font-size:large">
                        @((MarkupString)@HotelBookingVM.OrderDetails.HotelRoomDTO.Details)
                    </p>
                </div>

            </div>
        </div>

        <div class="col-12 col-lg-5 p-4 2 mt-4 mt-md-0" style="border: 1px solid #fff;">
            <EditForm Model="HotelBookingVM" class="container" OnValidSubmit="HandleCheckout">


                <div class="row px-2 text-success border-bottom"><div class="col-7 py-1"><p style="font-size:x-large;margin:0px;">Enter Details</p></div></div>

                <div class="form-group pt-2">
                    <label class="text-warning">Name</label>
                    <InputText @bind-Value="HotelBookingVM.OrderDetails.Name" type="text" class="form-control" />
                    <ValidationMessage For="(() => HotelBookingVM.OrderDetails.Name)"/>
                </div>
                <div class="form-group pt-2">
                    <label class="text-warning">Phone</label>
                    <InputText @bind-Value="HotelBookingVM.OrderDetails.Phone" type="text" class="form-control" />
                    <ValidationMessage For="(() => HotelBookingVM.OrderDetails.Phone)" />
                </div>
                <div class="form-group">
                    <label class="text-warning">Email</label>
                    <InputText @bind-Value="HotelBookingVM.OrderDetails.Email" type="text" class="form-control" />
                    <ValidationMessage For="(() => HotelBookingVM.OrderDetails.Email)" />
                </div>
                <div class="form-group">
                    <label class="text-warning">Check in Date</label>
                    <InputDate @bind-Value="HotelBookingVM.OrderDetails.CheckInDate" type="date" disabled class="form-control" />
                    <ValidationMessage For="(() => HotelBookingVM.OrderDetails.CheckInDate)" />
                </div>
                <div class="form-group">
                    <label class="text-warning">Check Out Date</label>
                    <InputDate @bind-Value="HotelBookingVM.OrderDetails.CheckOutDate" type="date" disabled class="form-control" />
                    <ValidationMessage For="(() => HotelBookingVM.OrderDetails.CheckOutDate)" />
                </div>
                <div class="form-group">
                    <label class="text-warning">No. of nights</label>
                    <select class="form-control" value="@NumberOfNights" @onchange="HandleNumberOfNightsChange">
                        @for (var i = 1; i <= 10; i++)
                        {
                            if (i == NumberOfNights)
                            {
                                <option value="@i" selected="selected"> @i </option>
                            }
                            else
                            {
                                <option value="@i">@i</option>
                            }

                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success form-control">Checkout Now</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
}

@code {

    [Parameter]
    public int? Id { get; set; }

    public HotelRoomBookingVM HotelBookingVM { get; set; } = new HotelRoomBookingVM();

    private int NumberOfNights { get; set; } = 1;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            HotelBookingVM.OrderDetails = new RoomOrderDetailDTO();
            if (Id != null)
            {
                var roomInitialInfo = await _localStorageService.GetItemAsync<CustomerBookingVM>(StaticDetails.Local_InitialBooking);

                if (roomInitialInfo != null)
                {
                    HotelBookingVM.OrderDetails.HotelRoomDTO = await _hotelRoomService.GetHotelRoomDetailsAsync(Id.Value, roomInitialInfo.StartDate.ToString("MM/dd/yyyy"), roomInitialInfo.EndDate.ToString("MM/dd/yyyy"));
                    NumberOfNights = roomInitialInfo.NumberOfNights;
                    HotelBookingVM.OrderDetails.CheckInDate = roomInitialInfo.StartDate;
                    HotelBookingVM.OrderDetails.CheckOutDate = roomInitialInfo.EndDate;
                    HotelBookingVM.OrderDetails.HotelRoomDTO.TotalDays = roomInitialInfo.NumberOfNights;
                    HotelBookingVM.OrderDetails.HotelRoomDTO.TotalAmount = roomInitialInfo.NumberOfNights * HotelBookingVM.OrderDetails.HotelRoomDTO.RegularRate;
                }
                else
                {
                    HotelBookingVM.OrderDetails.HotelRoomDTO = await _hotelRoomService.GetHotelRoomDetailsAsync(Id.Value, DateTime.Now.ToString("MM/dd/yyyy"), DateTime.Now.AddDays(1).ToString("MM/dd/yyyy"));
                    NumberOfNights = 1;
                    HotelBookingVM.OrderDetails.CheckInDate = DateTime.Now;
                    HotelBookingVM.OrderDetails.CheckOutDate = DateTime.Now.AddDays(1);
                    HotelBookingVM.OrderDetails.HotelRoomDTO.TotalDays = 1;
                    HotelBookingVM.OrderDetails.HotelRoomDTO.TotalAmount = HotelBookingVM.OrderDetails.HotelRoomDTO.RegularRate;

                }
            }
        }
        catch (Exception ex)
        {
            await _jsRunTime.ToastrError(ex.Message);
        }
    }

    private async Task HandleNumberOfNightsChange(ChangeEventArgs e)
    {
        NumberOfNights = Convert.ToInt32(e.Value.ToString());
        HotelBookingVM.OrderDetails.HotelRoomDTO = await _hotelRoomService.GetHotelRoomDetailsAsync(Id.Value, HotelBookingVM.OrderDetails.CheckInDate.ToString("MM/dd/yyyy"), HotelBookingVM.OrderDetails.CheckInDate.AddDays(NumberOfNights).ToString("MM/dd/yyyy"));

        HotelBookingVM.OrderDetails.CheckOutDate = HotelBookingVM.OrderDetails.CheckInDate.AddDays(NumberOfNights);
        HotelBookingVM.OrderDetails.HotelRoomDTO.TotalDays = NumberOfNights;
        HotelBookingVM.OrderDetails.HotelRoomDTO.TotalAmount = NumberOfNights * HotelBookingVM.OrderDetails.HotelRoomDTO.RegularRate;
    }

    private async Task HandleCheckout()
    {
        if (!await HandleValidation())
        {
            return;
        }




    }


    private async Task<bool> HandleValidation()
    {
        if (string.IsNullOrEmpty(HotelBookingVM.OrderDetails.Name))
        {
            await _jsRunTime.ToastrError("Name cannot be empty");
            return false;
        }

        if (string.IsNullOrEmpty(HotelBookingVM.OrderDetails.Phone))
        {
            await _jsRunTime.ToastrError("Phone cannot be empty");
            return false;
        }

        if (string.IsNullOrEmpty(HotelBookingVM.OrderDetails.Email))
        {
            await _jsRunTime.ToastrError("Email cannot be empty");
            return false;
        }

        return true;
    }



}
